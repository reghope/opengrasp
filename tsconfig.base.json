{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@opengrasp/shared": ["packages/shared/src"],
      "@opengrasp/memory": ["packages/memory/src"],
      "@opengrasp/gateway": ["packages/gateway/src"],
      "@opengrasp/tui": ["packages/tui/src"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  }
}
